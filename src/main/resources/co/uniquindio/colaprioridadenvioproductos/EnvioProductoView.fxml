<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="550.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.uniquindio.colaprioridadenvioproductos.viewcontroller.EnvioProductoController">
   <children>
      <VBox>
         <children>
            <VBox alignment="CENTER">
               <children>
                  <Label alignment="CENTER" contentDisplay="CENTER" text="GESTIÓN DE ENVÍO DE PRODUCTOS" textAlignment="CENTER">
                     <font>
                        <Font name="Georgia" size="24.0" />
                     </font>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <VBox.margin>
                        <Insets bottom="10.0" top="30.0" />
                     </VBox.margin>
                  </Label>
                  <HBox alignment="CENTER">
                     <children>
                        <Label alignment="CENTER" contentDisplay="CENTER" prefWidth="70.0" text="Nombre" textAlignment="CENTER">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                           <font>
                              <Font name="Georgia" size="13.0" />
                           </font>
                        </Label>
                        <TextField fx:id="nombreField" alignment="CENTER" prefHeight="45.0" prefWidth="256.0" promptText="Ingrese el nombre del producto">
                           <HBox.margin>
                              <Insets bottom="10.0" top="10.0" />
                           </HBox.margin>
                           <font>
                              <Font name="Georgia" size="12.0" />
                           </font>
                        </TextField>
                     </children>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </HBox>
                  <HBox alignment="CENTER">
                     <children>
                        <Label alignment="CENTER" contentDisplay="CENTER" prefWidth="70.0" text="Peso (Kg)" textAlignment="CENTER">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                           <font>
                              <Font name="Georgia" size="13.0" />
                           </font>
                        </Label>
                        <TextField fx:id="pesoField" alignment="CENTER" prefHeight="45.0" prefWidth="256.0" promptText="Ingrese el peso del producto en Kilogramos">
                           <HBox.margin>
                              <Insets bottom="10.0" top="10.0" />
                           </HBox.margin>
                           <font>
                              <Font name="Georgia" size="12.0" />
                           </font>
                        </TextField>
                     </children>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </HBox>
                  <HBox alignment="CENTER">
                     <children>
                        <Label alignment="CENTER" contentDisplay="CENTER" prefWidth="70.0" text="Valor ($)" textAlignment="CENTER">
                           <HBox.margin>
                              <Insets bottom="10.0" top="10.0" />
                           </HBox.margin>
                           <font>
                              <Font name="Georgia" size="13.0" />
                           </font>
                        </Label>
                        <TextField fx:id="valorField" alignment="CENTER" prefHeight="45.0" prefWidth="256.0" promptText="Ingrese el precio del producto en pesos">
                           <HBox.margin>
                              <Insets bottom="10.0" top="10.0" />
                           </HBox.margin>
                           <font>
                              <Font name="Georgia" size="12.0" />
                           </font>
                        </TextField>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER">
                     <children>
                        <Label alignment="CENTER" contentDisplay="CENTER" prefWidth="70.0" text="Prioridad" textAlignment="CENTER">
                           <HBox.margin>
                              <Insets bottom="10.0" top="10.0" />
                           </HBox.margin>
                           <font>
                              <Font name="Georgia" size="13.0" />
                           </font>
                        </Label>
                        <TextField fx:id="prioridadField" alignment="CENTER" prefHeight="45.0" prefWidth="256.0" promptText="Ingrese la prioridad del producto">
                           <HBox.margin>
                              <Insets bottom="10.0" top="10.0" />
                           </HBox.margin>
                           <font>
                              <Font name="Georgia" size="12.0" />
                           </font>
                        </TextField>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" layoutX="10.0" layoutY="202.0">
                     <children>
                        <Button fx:id="agregarButton" mnemonicParsing="false" prefHeight="42.0" prefWidth="114.0" text="Agregar a espera">
                           <HBox.margin>
                              <Insets right="10.0" top="10.0" />
                           </HBox.margin>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                           <font>
                              <Font name="Georgia" size="13.0" />
                           </font>
                        </Button>
                        <Button fx:id="enviarButton" minHeight="42.0" minWidth="42.0" mnemonicParsing="false" prefHeight="42.0" prefWidth="114.0" text="Enviar a cliente">
                           <HBox.margin>
                              <Insets left="10.0" right="10.0" top="10.0" />
                           </HBox.margin>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                           <font>
                              <Font name="Georgia" size="13.0" />
                           </font>
                        </Button>
                        <Button fx:id="enviadosButton" alignment="CENTER" minHeight="42.0" minWidth="42.0" mnemonicParsing="false" prefHeight="42.0" prefWidth="114.0" text="Productos enviados" textAlignment="CENTER" wrapText="true">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                           <font>
                              <Font name="Georgia" size="13.0" />
                           </font>
                           <HBox.margin>
                              <Insets left="10.0" top="10.0" />
                           </HBox.margin>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </VBox>
            <VBox>
               <children>
                  <TableView fx:id="tablaProductos">
                     <columns>
                        <TableColumn fx:id="nombreColumn" prefWidth="0.0" sortable="false" text="Nombre" />
                        <TableColumn fx:id="valorColumn" prefWidth="0.0" sortable="false" text="Valor ($)" />
                        <TableColumn fx:id="pesoColumn" prefWidth="0.0" sortable="false" text="Peso (Kg)" />
                        <TableColumn fx:id="prioridadColumn" prefWidth="0.0" sortable="false" text="Prioridad" />
                     </columns>
                     <VBox.margin>
                        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                     </VBox.margin>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</StackPane>
